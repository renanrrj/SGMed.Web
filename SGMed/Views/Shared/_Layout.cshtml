<!DOCTYPE html>
<html lang="pt-br">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - SGMed</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/SGMed.styles.css" asp-append-version="true" />    
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.3.0/font/bootstrap-icons.css"> @* importação *@
    <link href="https://cdn.datatables.net/v/dt/dt-2.1.8/datatables.min.css" rel="stylesheet"> @* importação *@
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light border-bottom box-shadow mb-3" style="background-color: #1FAF9E">
            <div class="container-fluid">
                <a class="navbar-brand" style="color:white" asp-area="" asp-controller="Home" asp-action="Index"><strong>SGMed</strong></a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">                       

                        <div class="dropdown ">
                            <a class="nav-link text-white" role="button" data-bs-toggle="dropdown"> Atendimento</a>
                            <ul class="dropdown-menu" style="background-color:#1FAF9E">
                                <li><a class="dropdown-item text-white" asp-controller="" asp-action="">Admissional</a></li>
                                <li><a class="dropdown-item text-white" asp-controller="Atendimento" asp-action="CreateAtendimento">Consulta</a></li>
                                <li><a class="dropdown-item text-white" asp-controller="" asp-action="">Demissional</a></li>
                            </ul>
                        </div>                        
                        <li class="nav-item">
                            <a class="nav-link text-white" asp-area="" asp-controller="Cliente" asp-action="Index">Clientes</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-white" asp-area="" asp-controller="Empresa" asp-action="Index">Empresas</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-white" asp-area="" asp-controller="Exame" asp-action="Index">Exames</a>
                        </li>     
                        <li class="nav-item">
                            <a class="nav-link text-white" asp-area="" asp-controller="Atendimento" asp-action="Testes">Testes</a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>

    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>
    
    <footer class="border-top footer text-muted text-white " style="background-color: #1FAF9E">
        <div class="container text-white">
             &copy; 2024 - SGMed - <a asp-area="" asp-controller="Home" asp-action="Index">Home</a>
        </div>
    </footer>    
     
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://cdn.datatables.net/v/dt/dt-2.1.8/datatables.min.js"></script> @* Imoportação *@
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
